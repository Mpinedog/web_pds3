<h1 class='text-center mb-4 my-title'>Lista de Controladores</h1>

<div class="container my-5">
  <div class="row g-4">
    <div class="col-md-6">
      <div class="text-center my-card p-5">
        <h5 class="card-title">Create New Controller</h5>
        <p class="card-text">Add a new controller to your list.</p>
        <%= link_to 'Create Controller', new_manager_path, class: 'my-btn-primary btn-lg mt-3' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="my-card p-4">
        <div class="card-body">
          <h5 class="card-title">List of Controllers</h5>
          <% if @managers.any? %>
            <ul class="list-group mt-3">
              <% @managers.each do |manager| %>
                <li class="list-group-item lister">
                  <div class="d-flex justify-content-between align-items-start">
                    <div>
                      <strong>Name:</strong> <%= manager.name %><br>
                      <strong>Active:</strong> <%= manager.active %><br>
                      <strong>Associated Lockers:</strong>
                      <% if manager.lockers.any? %>
                        <ul class="mb-2">
                          <% manager.lockers.each do |locker| %>
                            <li><%= locker.name %></li>
                          <% end %>
                        </ul>
                      <% else %>
                        <span class="">None</span>
                      <% end %>
                    </div>
                    <div>
                      <%= link_to 'View', manager_path(manager), class: 'my-btn-sec btn-sm' %>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-muted mt-3">No controllers available.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
