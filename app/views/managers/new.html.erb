<h1 class="mb-4 my-title">Creaci√≥n de controlador</h1>

<%= form_with(model: @manager, url: managers_path, local: true, html: { class: 'custom-form' }) do |f| %>
  <% if @manager.errors.any? %>
    <div class="alert alert-danger">
      <h4>Se encontraron los siguientes errores:</h4>
      <ul>
        <% @manager.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, 'Nombre del Controlador', class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :predictor_Id, 'Modelo', class: 'form-label' %>
    <%= f.collection_select :predictor_Id, Predictor.all, :id, :name, prompt: "Selecciona un modelo", class: 'form-select' %>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit 'Crear Controlador', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>