<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container mt-5 col-xl-4 col-md-8 col-12">
  <div class="card">
    <div class="card-header text-center bg-primary text-white">
      <h2>Iniciar Sesión</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :email, 'Correo Electrónico', class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :password, 'Contraseña', class: 'form-label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, 'Recordarme', class: 'form-check-label' %>
          </div>
        <% end %>

        <div class="d-grid gap-2">
          <%= f.submit "Iniciar Sesión", class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <% if current_user %>
          <h2><%= current_user.email %></h2>
        <% else %>
          <h2></h2>
          
          <% if devise_mapping.omniauthable? %>
            <%= link_to "Iniciar sesión con Google", user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: "false" }, class: 'btn btn-outline-primary mt-2' %>
          <% end %>
        <% end %>
        <%= link_to "¿No tienes una cuenta? Regístrate", new_registration_path(resource_name), class: 'btn btn-link' %>
      </div>
    </div>
  </div>
</div>
