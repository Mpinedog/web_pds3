<!-- app/views/predictors/index.html.erb -->
<div class="container mt-5">
  <h2>Predictors Disponibles</h2>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Signo 1</th>
        <th>Signo 2</th>
        <th>Signo 3</th>
        <th>Signo 4</th>
        <th>Signo 5</th>
        <th>Signo 6</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @predictors.each do |predictor| %>
        <tr>
          <td><%= predictor.id %></td>
          
          <!-- Mostrar names de signos, si existen -->
          <% predictor.signs.first(6).each do |sign| %>
            <td><%= sign.sign_name %></td>
          <% end %>

          <!-- Rellena las celdas vacÃ­as en caso de que haya menos de 6 signos -->
          <% (6 - predictor.signs.count).times do %>
            <td>-</td>
          <% end %>

          <td>
            <%= link_to 'Ver', predictor_path(predictor), class: 'btn btn-primary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if current_user&.super_user? %>
    <%= link_to 'Agregar Nuevo Predictor', new_predictor_path, class: 'btn btn-success' %>
  <% end %>
</div>
