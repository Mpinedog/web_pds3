<h1 class='mb-4 my-title'>Modelos Disponibles</h1>

<div class="container">
  <% if current_user&.super_user? %>
    <div class="d-flex">
      <%= link_to 'Crear nuevo Modelo', new_predictor_path, class: 'my-btn-primary mb-3 mx-auto' %>
    </div>
  <% end %>
  <table class="custom-table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Signo 1</th>
        <th>Signo 2</th>
        <th>Signo 3</th>
        <th>Signo 4</th>
        <th>Signo 5</th>
        <th>Signo 6</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @predictors.each do |predictor| %>
        <tr>
          <td><%= predictor.name %></td>
          
          <% predictor.signs.first(6).each do |sign| %>
            <td><%= sign.sign_name %></td>
          <% end %>

          <% (6 - predictor.signs.count).times do %>
            <td>-</td>
          <% end %>

          <td>
            <%= link_to 'Ver', predictor_path(predictor), class: 'my-btn-primary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
