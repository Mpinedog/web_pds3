<%= form_with(model: @usuario, local: true) do |f| %>
  <% if @usuario.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@usuario.errors.count, "error") %> impidieron que este usuario se guardara:</h4>
      <ul>
        <% @usuario.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Campo de username, ya sea como campo visible u oculto para conservar el valor -->
  <%= f.hidden_field :username, value: @usuario.username %>

  <div class="mb-3">
    <%= f.label :first_name, 'Nombre', class: 'form-label' %>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :last_name, 'Apellido', class: 'form-label' %>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :modelo_id, 'Modelo Asociado', class: 'form-label' %>
    <%= f.collection_select :modelo_id, @modelos, :id, :nombre, prompt: 'Seleccione un modelo', class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= f.submit 'Guardar Cambios', class: 'btn btn-primary' %>
  </div>
<% end %>
