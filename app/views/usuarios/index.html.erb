<div class="container mt-5">
  <h1>Lista de Usuarios</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Email</th>
        <th>Nombre de Usuario</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @usuarios.each do |usuario| %>
        <tr>
          <td><%= usuario.first_name %></td>
          <td><%= usuario.last_name %></td>
          <td><%= usuario.email %></td>
          <td><%= usuario.username %></td>
          <td>
            <%= link_to 'Ver', usuario_path(usuario), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Editar', edit_usuario_path(usuario), class: 'btn btn-warning btn-sm' %>
            
            <% unless usuario.super_user? %>
              <%= link_to 'Eliminar', usuario_path(usuario), method: :delete, data: { confirm: '¿Estás seguro de que deseas eliminar este usuario?' }, class: 'btn btn-danger btn-sm' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
