<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="col-xl-4 col-md-8 col-12">
    <div class="card shadow-lg">
      <div class="card-header text-center bg-primary text-white">
        <h2>Editar Controlador</h2>
      </div>
      <div class="card-body">
        <%= form_with(model: @controlador, url: controlador_path(@controlador), method: :patch, local: true) do |f| %>
          <% if @controlador.errors.any? %>
            <div class="alert alert-danger">
              <h4>Se encontraron los siguientes errores:</h4>
              <ul>
                <% @controlador.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :nombre, 'Nombre del Controlador', class: 'form-label' %>
            <%= f.text_field :nombre, class: 'form-control' %>
          </div>

          <div class="d-grid gap-2">
            <%= f.submit 'Actualizar Controlador', class: 'btn btn-primary btn-lg' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
