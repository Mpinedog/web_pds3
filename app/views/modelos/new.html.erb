<div class="container mt-5">
  <h2>Crear Nuevo Modelo</h2>
  <%= form_with(model: @modelo, local: true, html: { enctype: "multipart/form-data" }) do |f| %>
    
    <div class="mb-3">
      <%= f.label :nombre, 'Nombre del Modelo', class: 'form-label' %>
      <%= f.text_field :nombre, class: 'form-control', placeholder: 'Introduce el nombre del modelo' %>
    </div>

    <div class="mb-3">
      <%= f.label :tflite_file, 'Sube el archivo del modelo (.tflite)', class: 'form-label' %>
      <%= f.file_field :tflite_file, accept: ".tflite", class: 'form-control' %>
    </div>

    <h3>Signos e Imágenes</h3>
    <% 6.times do |i| %>
      <div class="mb-3">
        <%= f.fields_for :signs, @modelo.signs.build do |sign_form| %>
          <%= sign_form.label :sign_name, "Símbolo #{i + 1}", class: 'form-label' %>
          <%= sign_form.text_field :sign_name, class: 'form-control', placeholder: "Nombre del Símbolo" %>

          <%= sign_form.label :image, "Imagen del Símbolo #{i + 1}", class: 'form-label mt-2' %>
          <%= sign_form.file_field :image, class: 'form-control' %>
        <% end %>
      </div>
    <% end %>

    <%= f.submit 'Crear Modelo', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to 'Volver a la Lista de Modelos', modelos_path, class: 'btn btn-secondary mt-3' %>
</div>
