<div class="container">
  <div class="my-card">
    <div class="card-header bg-secondary text-white text-center">
      <h1 class="mb-0">Users</h1>
    </div>
    <div class="card-body">
      <div class="">
        <table class="custom-table">
          <thead class="">
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Username</th>
              <th>Model</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.email %></td>
                <td><%= user.username %></td>
                <td><%= user.predictor&.name || 'No predictor assigned' %></td>
                <td class="text-center">
                  <%= link_to 'View', user_path(user), class: 'my-btn-primary btn-sm me-1' %>
                  <%= link_to 'Edit', edit_user_path(user), class: 'my-btn-sec btn-sm me-1' %>

                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
