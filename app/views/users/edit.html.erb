<%= form_with(model: @user, local: true, html: { class: 'custom-form' }) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">
        <%= pluralize(@user.errors.count, "error") %> prevented this user from being saved:
      </h4>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :username, 'Username', class: 'form-label' %>
    <%= f.text_field :username, class: 'form-control', placeholder: 'Enter username', value: @user.username %>
  </div>

  <div class="mb-3">
    <%= f.label :first_name, 'First Name', class: 'form-label' %>
    <%= f.text_field :first_name, class: 'form-control', placeholder: 'Enter first name' %>
  </div>

  <div class="mb-3">
    <%= f.label :last_name, 'Last Name', class: 'form-label' %>
    <%= f.text_field :last_name, class: 'form-control', placeholder: 'Enter last name' %>
  </div>

  <div class="mb-3">
    <%= f.label :predictor_id, 'Associated Model', class: 'form-label' %>
    <%= f.collection_select :predictor_id, @predictors, :id, :name, 
      { prompt: 'Select a model' }, 
      { class: 'form-select' } %>
  </div>

  <div class="d-grid">
    <%= f.submit 'Save Changes', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
