<h1>Lista de Casilleros</h1>

<%= link_to 'Nuevo Casillero', new_casillero_path, class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Estado</th>
      <th>Ubicación</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @casilleros.each do |casillero| %>
      <tr>
        <td><%= casillero.id %></td>
        <td><%= casillero.nombre %></td>
        <td><%= casillero.estado %></td>
        <td><%= casillero.ubicacion %></td>
        <td>
          <%= link_to 'Ver', casillero_path(casillero) %>
          <%= link_to 'Editar', edit_casillero_path(casillero) %>
          <%= link_to 'Eliminar', casillero_path(casillero), method: :delete, data: { confirm: '¿Estás seguro?' } %>
          <%= button_to 'Generar Contraseña', generar_contrasena_casillero_path(casillero), method: :patch, data: { confirm: '¿Generar nueva contraseña?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
