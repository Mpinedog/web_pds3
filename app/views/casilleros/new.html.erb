<%= form_with(model: @casillero, local: true) do |form| %>
  <% if @casillero.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@casillero.errors.count, "error") %> impidieron que este casillero se guardara:</h4>
      <ul>
        <% @casillero.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :clave, "Clave de Acceso", class: "form-label" %>
    <%= form.text_field :clave, class: "form-control", pattern: "[0-9]{4}", maxlength: 4, placeholder: "Ingrese 4 números", title: "Debe contener exactamente 4 números" %>
  </div>

  <div class="mb-3">
    <%= form.label :usuario_id, "Correo Electrónico del Dueño", class: "form-label" %>
    <%= form.collection_select :usuario_id, Usuario.all, :id, :email, { prompt: "Seleccione un correo" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Guardar Casillero", class: "btn btn-primary" %>
  </div>
<% end %>
