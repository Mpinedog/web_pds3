<div class="container mt-5">
  <h2>Información: <%= @locker.name %></h2>
  <p><strong>Id: </strong> <%= @locker.id %></p>
  <p><strong>Controlador:</strong> <%= @locker.manager.try(:name) %></p>
  <p><strong>Usuario:</strong> <%= @locker.user.try(:username) %></p>
  <p><strong>Abierto:</strong> <%= @locker.opening ? 'Sí' : 'No' %></p>
  <p><strong>Clave:</strong> <%= @locker.password %></p>

  <p><strong>Estadísticas:</strong></p>
  <ul>
    <li><strong>Aperturas:</strong> <%= @locker.metric.try(:openings_count) || 0 %></li>
    <li><strong>Intentos fallidos:</strong> <%= @locker.metric.try(:failed_attempts_count) || 0 %></li>
    <li><strong>Cambios de contraseña:</strong> <%= @locker.metric.try(:password_changes_count) || 0 %></li>
  </ul>

  <div class="container">
    <h3 class="mb-4">Historial de Aperturas</h3>
    <% if @openings.any? %>
      <table class="table table-bordered table-hover">
        <thead class="table-dark">
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Opened At</th>
            <th scope="col">Closed At</th>
          </tr>
        </thead>
        <tbody>
          <% @openings.each do |opening| %>
            <tr>
              <td><%= opening.id %></td>
              <td><%= opening.opened_at.strftime("%d/%m/%Y %H:%M:%S") %></td>
              <td>
                <% if opening.closed_at.present? %>
                  <%= opening.closed_at.strftime("%d/%m/%Y %H:%M:%S") %>
                <% else %>
                  <span class="text-danger">No Cerrado</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-muted">No hay aperturas registradas para este locker.</p>
    <% end %>
  </div>

  <%= link_to 'Editar', edit_locker_path(@locker), class: 'btn btn-warning' %>
  <%= form_with url: locker_path(@locker), method: :delete, class: 'd-inline' do |form| %>
    <%= form.submit 'Eliminar', class: 'btn btn-danger btn-sm', data: { confirm: '¿Estás seguro de que deseas eliminar este casillero?' } %>
  <% end %>
  <%= link_to 'Volver a la Lista de Casilleros', lockers_path, class: 'btn btn-secondary' %>
</div>
